#!/usr/bin/env ruby
# frozen_string_literal: true

lib_path = File.expand_path('../lib', __dir__)
$LOAD_PATH.unshift(lib_path) unless $LOAD_PATH.include?(lib_path)

require 'zellij_toolkit'

ZellijToolkit::DependencyChecker.check('kitty')

ZellijToolkit::KittyRemote.instance.set_tab_title_from_parent_process
